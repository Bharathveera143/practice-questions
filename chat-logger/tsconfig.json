{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "commonjs",      // ✅ Node.js-க்கு safe
    "target": "es2019",        // ✅ modern enough but stable
    "lib": ["esnext"],
    "types": ["node"],         // ✅ Node.js built-ins (fs, path, etc.)

    // Other Outputs
    "sourceMap": true,
    "declaration": true,

    // Stricter Typechecking Options
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
