{
  "compilerOptions": {
    "target": "ES2020",               // Compiles TS â†’ modern JS (supports async/await, promises, etc.)
    "module": "ESNext",               // Keeps ES6 import/export syntax
    "moduleResolution": "Node",       // Resolves modules like Node.js
    "outDir": "./dist",               // Compiled .js files go here
    "rootDir": "./src",               // Your .ts files should be inside /src
    "esModuleInterop": true,          // Allows default import compatibility
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   // Enables strict type-checking
    "skipLibCheck": true              // Skips checking type definition files for speed
  },
  "include": ["src"],                 // Compile everything in src
  "exclude": ["node_modules", "dist"] // Ignore these
}
